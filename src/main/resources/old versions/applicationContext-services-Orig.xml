<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="globalConstants" class="com.bayer.integration.properties.GlobalConstants">
		<property name="appProperties" ref="appProperties" />
	</bean>

	<bean id="epcRestMgr" class="com.ecosys.service.EpcRestMgrImpl">
	</bean>	
	
	<bean id="dbMgr" class="com.bayer.integration.persistence.StagingDatabaseManagerImpl">
		<property name="epcDataSource" ref="epcDataSource" />
	</bean>
	
	<bean id="prjMgr" class="com.bayer.integration.service.ProjectExportManagerImpl">
		<property name="epcRestMgr" ref="epcRestMgr" />	
		<property name="stgDBMgr" ref="dbMgr" />
	</bean>
	
	<bean id="wbsMgr" class="com.bayer.integration.service.WBSImportMgrImpl">
		<property name="epcRestMgr" ref="epcRestMgr" />	
		<property name="stgDBMgr" ref="dbMgr" />
	</bean>
 
	<bean id="wpMgr" class="com.bayer.integration.service.PMOrderImportMgrImpl">
		<property name="epcRestMgr" ref="epcRestMgr" />		
	</bean>
  
	<bean id="acMgr" class="com.bayer.integration.service.ActualImportMgrImpl">
		<property name="epcRestMgr" ref="epcRestMgr" />
		<property name="stgDBMgr" ref="dbMgr" />
	</bean>
	
	<bean id="trackMgr" class="com.bayer.integration.service.POHeaderImportMgrImpl">
		<property name="epcRestMgr" ref="epcRestMgr" />	
	</bean>

	<bean id="comMgr" class="com.bayer.integration.service.POLineItemImportMgrImpl">
		<property name="epcRestMgr" ref="epcRestMgr" />
		<property name="stgDBMgr" ref="dbMgr" />
	</bean>
	

	
	<bean id="trackPoMgr" class="com.bayer.integration.service.POHeaderImportMgrImpl">
		<property name="epcRestMgr" ref="epcRestMgr" />	
	</bean>
	
	<bean id="comPoMgr" class="com.bayer.integration.service.POLineItemImportMgrImpl">
		<property name="epcRestMgr" ref="epcRestMgr" />
		<property name="stgDBMgr" ref="dbMgr" />
	</bean>
	
	<bean id="trackPrMgr" class="com.bayer.integration.service.PRHeaderImportMgrImpl">
		<property name="epcRestMgr" ref="epcRestMgr" />	
		<property name="stgDBMgr" ref="dbMgr" />
	</bean>

	<bean id="comPrMgr" class="com.bayer.integration.service.PRLineItemImportMgrImpl">
		<property name="epcRestMgr" ref="epcRestMgr" />
		<property name="stgDBMgr" ref="dbMgr" />
	</bean>
</beans>
